{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "llm-ui",
  "version": "0.1.0",
  "identifier": "com.llmui.desktop",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:8910",
    "beforeDevCommand": "yarn redwood dev",
    "beforeBuildCommand": "yarn redwood build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "LLM UI",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": ["$RESOURCE/**"],
        "enable": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
